{
  "manifest_version": 2,

  "name": "Coquette Inspect",
  "description": "A DevTools extension for inspecting games made with the Coquette framework",
  "version": "0.0.1",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "<all_urls>"
  ],

  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"],
    "run_at": "document_end",
    "all_frames": true
  }]
}
