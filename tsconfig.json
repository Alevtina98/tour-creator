{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    //    "declaration": true,
    //    "emitDeclarationOnly": true,
    "outDir": "./lib",
    //    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "sourceMap": false
  },
  "exclude": [
    "**/__tests__"
  ],
  "include": [
    "src"
  ]
}